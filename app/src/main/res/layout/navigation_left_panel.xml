<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_channel_left_panel_navigation"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMenu">

    <TableRow>
    <ImageButton
        android:id="@+id/row_channel_left_panel_button_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_settings_white_36dp"
        android:layout_marginRight="0dp"
        android:backgroundTint="@color/colorMenu"
        android:layout_gravity="center"
        android:textColor="@color/textColor"
        android:contentDescription="settings" />

    <ImageButton
        android:id="@+id/row_channel_left_panel_button_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_create_white_36dp"
        android:backgroundTint="@color/colorMenu"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:textColor="@color/textColorGray"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:contentDescription="create" />

    <ImageButton
        android:id="@+id/row_channel_left_panel_button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_add_white_36dp"
        android:backgroundTint="@color/colorMenu"


        android:layout_marginLeft="0dp"
        android:textColor="@color/textColorGray"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:contentDescription="add" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/left_panel_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:fastScrollEnabled="true">
            </ListView>
    </TableRow>

</TableLayout>